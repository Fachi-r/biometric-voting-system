{
  "name": "project-root",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:server": "pnpm --filter server dev",
    "dev:blockchain": "concurrently \"pnpm --filter blockchain node\" \"wait-on tcp:8545 && pnpm --filter blockchain run deploy\"",
    "dev": "concurrently --names \"blockchain,server,frontend\" --prefix \"[{name}]\" --prefix-colors \"magenta,red,green\" \"pnpm dev:blockchain\" \"pnpm dev:server\" \"pnpm dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.4"
  }
}